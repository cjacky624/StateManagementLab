<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup>
        <h1>Error.</h1>
        <h2>An error occurred while processing your request.</h2>
        @if (ViewBag.ErrorMessage != null)
        {
            <h3> @ViewBag.ErrorMessage</h3>
        }
    </hgroup>
    @Html.ValidationSummary()
</body>
</html>
